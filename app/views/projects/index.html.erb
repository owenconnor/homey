<div class="table-container">
  <h2>Project List</h2>
  <ul class="responsive-table">
    <li class="table-header">
      <div class="col col-1">Name</div>
      <div class="col col-2">Description</div>
      <div class="col col-3">Status</div>
      <div class="col col-4">Actions</div>
    </li>
    <% if @projects %>
      <% @projects.each do |project| %>
        <li class="table-row">
          <div class="col col-1" data-label="Name"><%= project.name %></div>
          <div class="col col-2" data-label="Description"><%= project.description %></div>
          <div class="col col-3" data-label="Status"><%= project.status %></div>
          <div class="col col-4" data-label="Actions">
            <%= link_to "Show", project %>
            <%= link_to "Edit", edit_project_path(project) %>
            <%= link_to "Delete", project, method: :delete, data: { confirm: "Are you sure you want to delete this project?" } %></div>
        </li>
      <% end %>
    <% end %>
  </ul>
  <div id="actions">
    <%= link_to "New Project", new_project_path %>
  </div>
</div>